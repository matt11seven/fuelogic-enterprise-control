# Configuração da API
# API Endpoint e Key
VITE_TANKS_ENDPOINT=https://api.example.com/tanks
VITE_API_KEY=your_api_key_here # Será buscado do banco se não estiver definido aqui
VITE_API_BASE_URL=http://localhost:3001 # URL base da API backend

# Configurações do PostgreSQL
DB_HOST=localhost
DB_PORT=5432
DB_NAME=fuelogic_enterprise
DB_USER=postgres
DB_PASSWORD=your_db_password_here

# Credenciais Master (para fallback e admin inicial)
# IMPORTANTE: Prefixo VITE_ é necessário para acesso no frontend
VITE_MASTER_USERNAME=admin
VITE_MASTER_PASSWORD=secure_master_password
VITE_MASTER_API_KEY=secure_master_api_key

# Controle de Ambiente
VITE_NODE_ENV=development # Use 'development' para mostrar logs, 'production' para ocultá-los

# JWT Secret para autenticação
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRY=24h

# Instruções:
# 1. Copie este arquivo para um arquivo chamado .env
# 2. Substitua os valores acima pelos valores reais da sua API
# 3. O arquivo .env não será enviado ao Git (está no .gitignore)
